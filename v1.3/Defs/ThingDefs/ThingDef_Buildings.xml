<?xml version="1.0" encoding="utf-8"?>
<Defs>

    <ThingDef ParentName="BuildingBase">
        <defName>LTS_NoticeBoard</defName>
        <label>notice boartd</label>
        <thingClass>Building</thingClass>
        <category>Building</category>
        <description>A notice board, the main use of this board is to put notices on it. A great invention to spread news of what is transpiring within your colony and elsewhere. Couriers love these!</description>
        <statBases>
            <MaxHitPoints>200</MaxHitPoints>
            <WorkToBuild>900</WorkToBuild>
            <Mass>10</Mass>
            <Flammability>1.0</Flammability>
            <Beauty>2</Beauty>
        </statBases>
        <building>
            <isInert>true</isInert>
            <ai_chillDestination>true</ai_chillDestination>
            <artificialForMeditationPurposes>false</artificialForMeditationPurposes>
        </building>
        <graphicData>
            <drawSize>(2,2)</drawSize>
            <texPath>Buildings/NoticeBoard</texPath>
            <graphicClass>Graphic_Multi</graphicClass>
            <shaderType>CutoutComplex</shaderType>
            <shadowData>
                <volume>(0.3, 0.5, 0.3)</volume>
                <offset>(0,0,-0.23)</offset>
            </shadowData>
            <damageData>
                <cornerTL>Damage/Corner</cornerTL>
                <cornerTR>Damage/Corner</cornerTR>
                <cornerBL>Damage/Corner</cornerBL>
                <cornerBR>Damage/Corner</cornerBR>
            </damageData>
        </graphicData>
        <stuffCategories>
            <li>Metallic</li>
            <li>Woody</li>
            <li>Stony</li>
        </stuffCategories>
        <costStuffCount>60</costStuffCount>
        <size>(2,1)</size>
        <hasInteractionCell>true</hasInteractionCell>
        <interactionCellOffset>(0,0,1)</interactionCellOffset>
        <designationCategory>Structure</designationCategory>
        <passability>PassThroughOnly</passability>
        <fillPercent>0.3</fillPercent>
        <pathCost>0</pathCost>
        <selectable>true</selectable>
        <defaultPlacingRot>South</defaultPlacingRot>
        <terrainAffordanceNeeded>Medium</terrainAffordanceNeeded>
        <uiIconPath>Buildings/NoticeBoard_south</uiIconPath>
        <canOverlapZones>false</canOverlapZones>
        <altitudeLayer>ItemImportant</altitudeLayer>
        <uiIconOffset>(0, 0.15)</uiIconOffset>
        <uiIconScale>1</uiIconScale>
        <rotatable>true</rotatable>
        <tickerType>Normal</tickerType>
        <leaveResourcesWhenKilled>true</leaveResourcesWhenKilled>
        <comps>
            <li Class="Tenants.Components.CompProps_NoticeBoard" />
        </comps>
        <researchPrerequisites>
            <li>ComplexFurniture</li>
        </researchPrerequisites>
    </ThingDef>
</Defs>