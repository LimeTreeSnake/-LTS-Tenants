<?xml version="1.0" encoding="utf-8"?>
<Defs>
    <FactionDef Abstract="True" ParentName="FactionBase" Name="LTS_TenancyFactions">
        <permanentEnemyToEveryoneExcept>
            <li>OutlanderCivil</li>
            <li>OutlanderRough</li>
            <li>TribeCivil</li>
            <li>PlayerTribe</li>
            <li>PlayerColony</li>
            <li>Ancients</li>
            <li MayRequire="LimeTreeSnake.Xenotech">LTS_SeasurgeFederation</li>
            <li MayRequire="LimeTreeSnake.Xenotech">LTS_OrkSettlers</li>
            <li MayRequire="LimeTreeSnake.Xenotech">LTS_ElfinSettlers</li>
            <li MayRequire="LimeTreeSnake.Xenotech">LTS_TribeNyankind</li>
            <li MayRequire="LimeTreeSnake.Xenotech">LTS_TribeFaun</li>
            <li MayRequire="OskarPotocki.VFE.Tribals">VFET_WildMen</li>
            <li MayRequire="Ludeon.RimWorld.Royalty">Empire</li>
            <li MayRequire="Ludeon.RimWorld.Royalty">OutlanderRefugee</li>
            <li MayRequire="Ludeon.RimWorld.Ideology">Beggars</li>
            <li MayRequire="Ludeon.RimWorld.Ideology">Pilgrims</li>
            <li MayRequire="Ludeon.RimWorld.Anomaly">ResearchExpedition</li>
            <li MayRequire="DankPyon.Medieval.Overhaul.House.Roxmont">DankPyon_NobleHouseRoxmont</li>
            <li MayRequire="DankPyon.Medieval.Overhaul.House.Roxmont">DankPyon_LoneRoxKnight</li>
            <li MayRequire="DankPyon.Medieval.Overhaul">DankPyon_PlayerKingdom</li>
            <li MayRequire="DankPyon.Medieval.Overhaul">DankPyon_LoneWolf</li>
            <li MayRequire="DankPyon.Medieval.Overhaul">DankPyon_MercenaryCompany</li>
            <li MayRequire="DankPyon.Medieval.Overhaul">DankPyon_NobleHouseFierce</li>
            <li MayRequire="DankPyon.Medieval.Overhaul">DankPyon_NobleHouseCivil2</li>
            <li MayRequire="DankPyon.Medieval.Overhaul">DankPyon_NobleHouseCivil</li>
            <li MayRequire="Aoba.DeadManSwitch.Core">DMS_Army</li>
        </permanentEnemyToEveryoneExcept>
        <hostileToFactionlessHumanlikes>false</hostileToFactionlessHumanlikes>
        <colorSpectrum>
            <li>(0.78, 0.79, 0.71)</li>
        </colorSpectrum>
        <backstoryFilters>
            <li>
                <categories>
                    <li>Outlander</li>
                </categories>
                <commonality>0.95</commonality>
            </li>
            <li>
                <categories>
                    <li>Offworld</li>
                </categories>
                <commonality>0.05</commonality>
            </li>
        </backstoryFilters>
        <allowedCultures>
            <li>Rustican</li>
        </allowedCultures>
        <disallowedMemes>
            <li MayRequire="Ludeon.RimWorld.Ideology">Structure_Animist</li>
            <li MayRequire="Ludeon.RimWorld.Ideology">Nudism</li>
            <li MayRequire="Ludeon.RimWorld.Ideology">Blindsight</li>
            <li MayRequire="Ludeon.RimWorld.Ideology">Supremacist</li>
            <li MayRequire="Ludeon.RimWorld.Ideology">Raider</li>
        </disallowedMemes>
        <techLevel>Industrial</techLevel>
        <hidden>true</hidden>
        <rescueesCanJoin>false</rescueesCanJoin>
        <autoFlee>false</autoFlee>
    </FactionDef>
    
    <FactionDef ParentName="LTS_TenancyFactions">
        <defName>LTS_Courier</defName>
        <pawnSingular>courier</pawnSingular>
        <pawnsPlural>couriers</pawnsPlural>
        <categoryTag>Courier</categoryTag>
        <requiredCountAtGameStart>1</requiredCountAtGameStart>
        <fixedName>Courier Assocation</fixedName>
        <leaderTitle>Official</leaderTitle>
        <factionIconPath>World/WorldObjects/Expanding/Town</factionIconPath>
    </FactionDef>

    <FactionDef ParentName="LTS_TenancyFactions">
        <defName>LTS_Tenant</defName>
        <pawnSingular>tenant</pawnSingular>
        <pawnsPlural>tenants</pawnsPlural>
        <categoryTag>Tenant</categoryTag>
        <requiredCountAtGameStart>1</requiredCountAtGameStart>
        <fixedName>Tenancy Assocation</fixedName>
        <leaderTitle>Official</leaderTitle>
        <factionIconPath>World/WorldObjects/Expanding/Town</factionIconPath>
    </FactionDef>
</Defs>