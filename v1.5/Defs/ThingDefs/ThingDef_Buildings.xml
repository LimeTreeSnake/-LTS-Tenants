<?xml version="1.0" encoding="utf-8"?>
<Defs>

    <ThingDef ParentName="LTS_Buildings">
        <defName>LTS_NoticeBoard</defName>
        <label>notice board</label>
        <thingClass>Tenants.Things.NoticeBoard</thingClass>
        <category>Building</category>
        <description>A notice board—a simple yet essential tool for posting news and notices. Whether it's announcing colony events or spreading word of far-off happenings, this board does it all. Couriers adore these, as they bring order and purpose to their vital deliveries!</description>
        <statBases>
            <MaxHitPoints>200</MaxHitPoints>
            <WorkToBuild>900</WorkToBuild>
            <Mass>10</Mass>
            <Flammability>1.0</Flammability>
            <Beauty>2</Beauty>
        </statBases>
        <graphicData>
            <drawSize>(2,2)</drawSize>
            <texPath>Buildings/NoticeBoard</texPath>
            <graphicClass>Graphic_Multi</graphicClass>
            <shaderType>CutoutComplex</shaderType>
            <shadowData>
                <volume>(0.3, 0.5, 0.3)</volume>
                <offset>(0,0,-0.23)</offset>
            </shadowData>
            <damageData>
                <cornerTL>Damage/Corner</cornerTL>
                <cornerTR>Damage/Corner</cornerTR>
                <cornerBL>Damage/Corner</cornerBL>
                <cornerBR>Damage/Corner</cornerBR>
            </damageData>
        </graphicData>
        <stuffCategories>
            <li>Metallic</li>
            <li>Woody</li>
            <li>Stony</li>
        </stuffCategories>
        <costStuffCount>60</costStuffCount>
        <size>(2,1)</size>
        <hasInteractionCell>true</hasInteractionCell>
        <interactionCellOffset>(0,0,1)</interactionCellOffset>
        <passability>PassThroughOnly</passability>
        <fillPercent>0.3</fillPercent>
        <pathCost>0</pathCost>
        <selectable>true</selectable>
        <defaultPlacingRot>South</defaultPlacingRot>
        <terrainAffordanceNeeded>Medium</terrainAffordanceNeeded>
        <uiIconPath>Buildings/NoticeBoard_south</uiIconPath>
        <canOverlapZones>false</canOverlapZones>
        <altitudeLayer>ItemImportant</altitudeLayer>
        <uiIconOffset>(0, 0.15)</uiIconOffset>
        <uiIconScale>1</uiIconScale>
        <rotatable>true</rotatable>
        <tickerType>Normal</tickerType>
        <leaveResourcesWhenKilled>true</leaveResourcesWhenKilled>
    </ThingDef>
</Defs>