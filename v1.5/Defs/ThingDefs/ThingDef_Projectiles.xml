    <ThingDef ParentName="BaseBullet">
        <defName>LTS_MusketProjectile</defName>
        <label>musket projectile</label>
        <description>A musket projectile
            Base damage: 15
            Stopping power: 1
            Armor Penetration: 0.2
            Speed: 80</description>
        <graphicData>
            <texPath>Projectiles/Musket_Projectile</texPath>
            <graphicClass>Graphic_Single</graphicClass>
        </graphicData>
        <projectile>
            <damageDef>Bullet</damageDef>
            <damageAmountBase>15</damageAmountBase>
            <stoppingPower>1</stoppingPower>
            <armorPenetrationBase>0.2</armorPenetrationBase>
            <speed>80</speed>
        </projectile>
    </ThingDef>
