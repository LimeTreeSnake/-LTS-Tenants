<?xml version="1.0" encoding="utf-8"?>
<Defs>
    <ThingDef Name="CourierWear" ParentName="ApparelMakeableBase" Abstract="True">
        <thingCategories>
            <li>CourierWear</li>
        </thingCategories>
        <techLevel>Industrial</techLevel>
        <tradeability>None</tradeability>
        <apparel>
            <tags>
                <li>CourierWear</li>
            </tags>
            <defaultOutfitTags>
                <li>CourierWear</li>
            </defaultOutfitTags>
        </apparel>
        <statBases>
            <MaxHitPoints>200</MaxHitPoints>
            <Flammability>0.6</Flammability>
            <ArmorRating_Sharp>0.55</ArmorRating_Sharp>
            <ArmorRating_Blunt>0.55</ArmorRating_Blunt>
            <ArmorRating_Heat>0.33</ArmorRating_Heat>
            <EquipDelay>5</EquipDelay>
        </statBases>
        <colorGenerator Class="ColorGenerator_Options">
            <options>
                <li>
                    <only>(0.22,0.22,0.22)</only>
                </li>
                <li>
                    <only>(0.33,0.33,0.33)</only>
                </li>
            </options>
        </colorGenerator>
        <recipeMaker>
            <researchPrerequisite>LTS_CourierTech</researchPrerequisite>
        </recipeMaker>
    </ThingDef>


    <!-- Courier Coat -->
    <ThingDef ParentName="CourierWear">
        <defName>LTS_CourierCoat</defName>
        <label>courier coat</label>
        <description>A refined coat tailored for the elite couriers of the colony, blending style and function with a hint of old-world elegance.</description>
        <graphicData>
            <texPath>Apparel/CourierCoat/CourierCoat</texPath>
            <graphicClass>Graphic_Single</graphicClass>
            <shaderType>CutoutComplex</shaderType>
            <drawSize>0.90</drawSize>
        </graphicData>
        <costStuffCount>90</costStuffCount>
        <costList>
            <Silver>25</Silver>
            <Gold>10</Gold>
        </costList>
        <stuffCategories>
            <li>Fabric</li>
        </stuffCategories>
        <statBases>
            <MarketValue>750</MarketValue>
            <Insulation_Cold>20</Insulation_Cold>
            <Insulation_Heat>10</Insulation_Heat>
            <Mass>2</Mass>
        </statBases>
        <equippedStatOffsets>
            <SocialImpact>0.10</SocialImpact>
            <SlaveSuppressionOffset MayRequire="Ludeon.RimWorld.Ideology">-0.3</SlaveSuppressionOffset>
        </equippedStatOffsets>
        <apparel>
            <bodyPartGroups>
                <li>Torso</li>
                <li>Neck</li>
                <li>Shoulders</li>
                <li>Arms</li>
            </bodyPartGroups>
            <wornGraphicPath>Apparel/CourierCoat/CourierCoat</wornGraphicPath>
            <layers>
                <li>Middle</li>
                <li>Shell</li>
            </layers>
        </apparel>
    </ThingDef>

    <!-- Courier Hat -->
    <ThingDef ParentName="CourierWear">
        <defName>LTS_CourierHat</defName>
        <label>courier hat</label>
        <description>A distinguished hat, designed for the elite couriers, offering both protection and a mark of their esteemed role.</description>
        <graphicData>
            <texPath>Apparel/CourierHat/CourierHat</texPath>
            <graphicClass>Graphic_Single</graphicClass>
            <shaderType>CutoutComplex</shaderType>
            <drawSize>0.90</drawSize>
        </graphicData>
        <costStuffCount>50</costStuffCount>
        <costList>
            <Silver>15</Silver>
            <Gold>5</Gold>
        </costList>
        <stuffCategories>
            <li>Fabric</li>
        </stuffCategories>
        <statBases>
            <MarketValue>500</MarketValue>
            <Insulation_Cold>10</Insulation_Cold>
            <Insulation_Heat>10</Insulation_Heat>
            <Mass>1</Mass>
        </statBases>
        <equippedStatOffsets>
            <SocialImpact>0.10</SocialImpact>
            <SlaveSuppressionOffset MayRequire="Ludeon.RimWorld.Ideology">-0.3</SlaveSuppressionOffset>
        </equippedStatOffsets>
        <apparel>
            <bodyPartGroups>
                <li>UpperHead</li>
            </bodyPartGroups>
            <wornGraphicPath>Apparel/CourierHat/CourierHat</wornGraphicPath>
            <layers>
                <li>Overhead</li>
            </layers>
        </apparel>
    </ThingDef>
</Defs>